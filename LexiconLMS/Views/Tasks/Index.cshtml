@model IEnumerable<LexiconLMS.Models.ViewModel.TaskListViewModel>

@{
    ViewData["Title"] = "Aktiviteter";
}

    <h1>Aktiviteter</h1>

<p>
    <a class="nav-link text-dark" asp-action="Create">Lägg till ny</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @*@Html.DisplayNameFor(model => model.Name)*@
                Namn
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.StartDate)*@
                Startdatum
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.EndDate)*@
                Slutdatum
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.Module)*@
                Modul
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.TaskType)*@
                Typ
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StartDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EndDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Module.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TaskType.Name)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Ändra</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Detaljer</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Radera</a>
                </td>
            </tr>
    }
    </tbody>
</table>
