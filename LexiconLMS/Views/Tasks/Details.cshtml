@model LexiconLMS.Models.ViewModel.TaskDetailsViewModel

@{
    ViewData["Title"] = "Aktivitetsdetaljer";
}

<h1>Detaljer för @Model.Name</h1>

<div>
    <h4>@Html.DisplayNameFor(model => model.Name)</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @*@Html.DisplayNameFor(model => model.Name)*@
            Aktivitet
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @*@Html.DisplayNameFor(model => model.StartDate)*@
            Startdatum
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.StartDate)
        </dd>
        <dt class = "col-sm-2">
            @*@Html.DisplayNameFor(model => model.EndDate)*@
            Slutdatum
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EndDate)
        </dd>
        <dt class = "col-sm-2">
            @*@Html.DisplayNameFor(model => model.Module)*@
            Modul
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Module.Name)
        </dd>
        <dt class = "col-sm-2">
            @*@Html.DisplayNameFor(model => model.TaskType)*@
            Typ
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TaskType.Name)
        </dd>
    </dl>
</div>


<div>
    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Id">Ändra</a>
    <a class="btn btn-warning" asp-action="Details" asp-controller="Modules" asp-route-id="@Model.Module.Id">Tillbaka till Modul: @Model.Module.Name</a>
    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@Model.Id">Radera</a>
</div>