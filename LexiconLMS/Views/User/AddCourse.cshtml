@model LexiconLMS.Models.User
@{
    ViewData["Title"] = "Lägg till kurs";
}

<h1>Addera elev till kurs</h1>
<h4>@ViewBag.coursename</h4>

<div class="row">
    <div class="col-md-4">
        <form  asp-action="AddCourse" asp-route-id1="@ViewBag.courseid" >
             <div class="form-group">
                <label class="control-label">Tillgängliga användare</label>
                <select class="form-control" asp-for="@Model.Id" asp-items="ViewBag.Users"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Spara" class="btn btn-primary" />
            </div>
        </form>
          <a class="btn btn-success" asp-controller="Courses" asp-action="Details" asp-route-id="@ViewBag.courseid">Tillbaka till @ViewBag.coursename</a>
    </div>
</div>
