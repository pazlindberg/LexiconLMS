@model LexiconLMS.Models.ViewModel.UserViewModel
@{
    ViewData["Title"] = "Edit";

}



<h1>Redigera Användare</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="@Model.FirstName" class="control-label"></label>
                <input asp-for="@Model.FirstName" class="form-control" />
                <span asp-validation-for="@Model.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.LastName" class="control-label"></label>
                <input asp-for="@Model.LastName" class="form-control" />
                <span asp-validation-for="@Model.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Email" class="control-label"></label>
                <input asp-for="@Model.Email" class="form-control" />
                <span asp-validation-for="@Model.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.PhoneNumber" class="control-label"></label>
                <input asp-for="@Model.PhoneNumber" class="form-control" />
                <span asp-validation-for="@Model.PhoneNumber" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="@Model.CourseId" class="control-label"></label>
                <select asp-for="@Model.CourseId" class="form-control" asp-items="ViewBag.courseId">
                    <option disabled selected>--- SELECT ---</option>
                </select>
                <span asp-validation-for="@Model.CourseId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Spara" class="btn btn-primary" />
                <button class="btn btn-info" onclick="goBack()">Tillbaka</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

