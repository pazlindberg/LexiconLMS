@model IEnumerable<LexiconLMS.Models.User>
@inject UserManager<User> _userManager
@using System.Linq;
@{
    ViewData["Title"] = "Användare";
    
}

<h1>Användare</h1>

<p>
    <a class="nav-link text-danger" asp-area="Identity" asp-page="/Account/Register">Ny Användare</a>
</p>
<form asp-action="Filter">
    <div class="input-group m-3">
        <input type="text" name="Email" class="form-control" placeholder="Search by Email" />
        <div class="input-group-append">
            <button type="submit" class="btn btn-primary"><i class="fa fa-search">&emsp;Search</i></button>
        </div>
    </div>
</form>
<h2> All Users</h2>
<br />

<div class="table-responsive">
    <table class="table table-bordered table-condensed table-striped table-hover sortable">
        <thead>
            <tr class="bg-success">
                <th data-defaultsign="AZ">
                    Role Type
                </th>
                <th data-defaultsign="AZ">
                    @Html.DisplayNameFor(model => model.FullName)
                </th>
                <th data-firstsort="desc">
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Course.Name)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                var roles = await _userManager.GetRolesAsync(item);
                var studentRol = roles.FirstOrDefault(s => s == "Student");

                <tr>
                    <td>
                        @if (studentRol == "Student")
                        {
                            <p>Student</p>
                        }
                        else
                        {<p>Teacher</p>}
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FullName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Course.Name)
                    </td>
                    <td>

                        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">Ändra</a>
                        <a class="btn btn-warning" asp-action="Details" asp-route-id="@item.Id">Detaljer</a>
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Radera</a>
                    </td>
                </tr>







            }
        </tbody>
    </table>
</div>

