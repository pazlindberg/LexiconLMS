@model LexiconLMS.Models.User
@{
    ViewData["Title"] = "Delete";
}

    <h1>Radera</h1>



<h3>Vill du verkligen radera användare <b><i>@Html.DisplayFor(model => model.FullName)</i></b>?</h3>
