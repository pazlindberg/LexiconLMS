@model LexiconLMS.Models.Course

@{
    ViewData["Title"] = "Ta bort";
}

<h1>Radera kurs</h1>

<h3>Vill du verkligen radera kursen <b><i>@Html.DisplayFor(model => model.Name)</i></b>?</h3>
<div>
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Radera" class="btn btn-danger" />
        <a class="btn btn-info" asp-action="Index">Tillbaka till kurser</a>
    </form>
</div>
