@model LexiconLMS.Models.Module

@{
    ViewData["Title"] = "Radera";
}

<h3>Vill du verkligen radera modulen <b><i>@Model.Name</i></b>?</h3>
<div>
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Radera" class="btn btn-danger" />
    </form>
    <div>
        <a class="btn btn-success" asp-controller="Modules" asp-action="Details" asp-route-id="@Model.Id">Tillbaka till Modul @Model.Name</a>
    </div>
</div>
